<%- includes('layout'); %>
      <div class='genre-detail'>
        <h1>Genre: <%= genre.name %></h1>
        <div class='books'>
          <h4>Books</h4>
          <ul>
            <% if (Object.keys(genre_books) > 0) { %>
              <% genre_books.forEach((book) => {
                <li>
                  <a href=<%= book.id %><%= book.title %></a>
                  <p><%= book.summary %></p>
                </li>
              <%}); %>
            <%} else { %>
              <li>This genre has no books.</li>
            <%} %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
