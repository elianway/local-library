<%- includes('layout'); %>
      <div class='book-delete'>
        <h1><%= title %>: <%= book.title %></h1>
        <p>Author: <%= book.author.lastName %>, <%= book.author.firstName %></p>
        <p><%= book.author.bornOn %> - <%= book.author.diedOn %></p>
        <p><%= book.summary %></p>
        <% if (book_instances.length) { %>
          <p><b>Delete the following instances before attempting to delete this book.</b></p>
          <div style='margin-left:20px;margin-top:20px;'>
            <h4>Copies</h4>
            <ul>
            <% book_instances.forEach((bookinstance) => { %>
              <li><a href=<%= bookinstance.id %>><%= bookinstance.id %></a></li>
            <% }); %>
            </ul>
          </div>
        <% } else { %>
          <p>Do you really want to delete this book?</p>
          <form method='POST' action=''>
            <div class='form-group'>
              <input id='bookid' class='form-control' type='hidden' name='bookid' value=<%= book.id %> required />
              <button class='btn btn-primary' type='submit'>Delete</button>
            </div>
          </form>
          <% } %>
      </div>
    </div>
  </body>
</html>
